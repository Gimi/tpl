-#---------------------------------------- head
- content_for :head do
  = stylesheet_link_tag "profiles/show"
  = link_jqueryui_stylesheet 'humanity'
  = javascript_include_tag 'profiles/show'
  = include_google_jsapi jquery: '1.3', jqueryui: '1.7'

-#---------------------------------------- sidebar
:ruby
  shortcuts = []
  shortcuts << ['back', position_profiles_path(@profile.position)]

  if p = @profile.previous_one
    shortcuts << ['previous profile', profile_path(p)]
  else
    shortcuts << 'previous profile'
  end

  if p = @profile.next_one
    shortcuts << ['next profile', profile_path(p)]
  else
    shortcuts << 'next profile'
  end

  sidebar t(:shortcuts) => shortcuts

-#---------------------------------------- content
- if flash[:failure]
  .error&= t falsh[:failure]
#details
  %table
    %caption= t '.detials'
    %tbody
      %tr
        %th
          %label= t :name
        %td&= @profile.name
        %th
          %label= t :birthday
        %td= @profile.birthday ? l(@profile.birthday) : nil
      %tr
        %th
          %label= t :education
        %td&= @profile.education
        %th
          %label= t :work_experience
        %td= @profile.work_experience ? "%d %s" % [@profile.work_experience, t(:years)] : nil
      %tr
        %th
          %label= t :state
        %td#state(colspan="3")
          #name= @profile.state
          %input{:type => 'button', :value => t(:change_state), 'data-href' => shift_profile_path(@profile), :class => 'event'}
#cv
  %h3
    = t 'profile.cv'
    = link_to t('.fullscreen'), '#cv-content', :id => 'fullscreen', :rel => 'facebox', 'data-loadingimg' => image_path('facebox/loading.gif'), 'data-closeimg' => image_path('facebox/closelabel.gif')
  %hr
  #cv-content
    %pre= @profile.cv
#logs
  %h3= t '.log'
  %hr
  %dl
    - @profile.logs.each do |log|
      %dt
        .action= t(log.action, :scope => 'profile.log.action')
        .operator
          by:
          &= log.operator ? log.operator.displayname : '-'
        .date= l log.created_at
        .clear-float
      %dd
        - if log.feedback.blank?
          = t '.no_feedbacks'
        - else
          &= log.feedback.content

-#------------------------------------------dialog
= render :partial => 'shared/state_dialog'
