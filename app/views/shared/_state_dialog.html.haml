#state-form.dialog.not-resizable{'data-dialog-title' => t(:change_state), 'data-dialog-width' => 960, 'data-dialog-height' => 600}
  - form_tag do
    %table
      %tr
        %th
          %label(for='profile[state]')= Profile.human_attribute_name :state
        %td= profile_state_select_tag
      %tr
        %th
          %label(for="profile[assign_to]")= t('profile.assign_to')
        %td= assignable_users_select_tag(defined?(selected_user) && selected_user)
      %tr
        %th
          %label(for="feedback[content]")= t(:feedback)
        %td= text_area_tag 'feedback[content]', nil, :style => 'width: 830px;height: 410px'
