%html
  %head
    %meta(name="keywords" content="recruitment manange nurun")
    %meta(name="description" content="A recruitment management system for nurun.com")
    %meta(http-equiv="content-type" content="text/html; charset=utf-8")
    %title= t(:title)
    = yield :head
  %body
    #wrapper
      #header
        #logo
          %h1= link_to t(:nurun), "http://www.nurun.com"
          %p= link_to t(:RMS), root_path
        #search
          %form{:method => "get", :action => url_for('/search')}
            %fieldset
              %input#search-text(type="text" name="s" size="15")
              %input#search-submit(type="submit" value="Search")
      #menu
        %ul
          %li.current_page_item
            = link_to t(:home), root_path
          %li
            = link_to t('menu.positions'), positions_path
          %li
            = link_to t('menu.profiles'), '#'
          %li
            = link_to t('admin'), '#'
      #page
        #page-bgtop
          #page-bgbtm
            #content
              = yield
            = yield :sidebar
            .clear-float &nbsp;
    #footer
      %p= t :copyright, year: '2009', author: link_to(t(:nurun), "http://www.nurun.com")
